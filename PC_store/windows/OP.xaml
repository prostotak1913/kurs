<Window x:Class="PC_store.output"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_store"
        mc:Ignorable="d"
        Title="output" Height="300" Width="400" ResizeMode="NoResize" WindowStyle="None" BorderBrush="Black" BorderThickness="1">
    <Grid Margin="0,0,0,0">
        <Grid Background="#FFF05219" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Margin="0,0,0,0" Width="400" x:Name="header">
            <Button Style="{StaticResource SysButtonStyle}" x:Name="exit" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Content="X"  Margin="0,0,1,0" />
            <TextBlock Foreground="LightYellow" Margin="1,1,162,0">Вывод</TextBlock>
        </Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="398" Height="220" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"/>
        <ComboBox x:Name="tab" HorizontalAlignment="Left" Margin="8,39,0,0" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="8,23,0,0" TextWrapping="Wrap" Text="из таблицы" VerticalAlignment="Top"/>


    </Grid>
</Window>
